rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /participant_responses/{study_id} {
      allow read: if false;
      allow create, update: if exists(/databases/$(database)/documents/registered_studies/$(request.resource.data.study_id));
      match /participants/{participant_id}{
          allow create, update: 
          if participant_id == request.resource.data.participant_id &&
          request.resource.data.participant_id in get(/databases/$(database)/documents/registered_studies/$(study_id)).data.registered_participants;
          match /{document=**} {
              allow create: 
                if participant_id == request.resource.data.patient_id &&
                    request.resource.data.patient_id in get(/databases/$(database)/documents/registered_studies/$(study_id)).data.registered_participants&&
                    study_id == request.resource.data.study_id;
          }
      }
      
    }
    
  }
}